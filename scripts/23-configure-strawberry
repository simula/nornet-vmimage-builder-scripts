# Bash options:
set -eux


# ====== Check environment variables ========================================
if [ ! -v USER_NAME ] || [ "${USER_NAME}" == "" ] ; then
   echo >&2 "Usage: env USER_NAME=<user> $0"
   echo >&2 "Example: sudo env USER_NAME=nornetpp $0"
   exit 1
fi

# ====== Prepare configuration file =========================================
if [ ! -e "/home/${USER_NAME}/.config/strawberry/strawberry.conf" ] ; then
   sudo -u "${USER_NAME}" mkdir -p "/home/${USER_NAME}/.config/strawberry"
   ( cat <<EOF
[MainWindow]
do_not_show_sponsor_message=true
EOF
   ) | sudo -u "${USER_NAME}" tee "/home/${USER_NAME}/.config/strawberry/strawberry.conf"
fi

# ====== Add a playlist for Strawberry ======================================
if [ -e /tmp/strawberry/Radios.m3u ] ; then
   sudo -u "${USER_NAME}" mkdir -p "/home/${USER_NAME}/Music"
   sudo -u "${USER_NAME}" cp /tmp/strawberry/Radios.m3u "/home/${USER_NAME}/Music"
fi
if [ -e "/home/${USER_NAME}/Music/Radios.m3u" ] ; then
   if [ ! -e "/home/${USER_NAME}/Desktop/Radios.m3u" ] ; then
      sudo -u "${USER_NAME}" ln -s "/home/${USER_NAME}/Music/Radios.m3u" "/home/${USER_NAME}/Desktop/"
   fi
fi
