# Bash options:
set -x


# ###### NorNet configuration ###############################################

# !!! Ensure that growpart and resizefs are enabled !!!!!!!!!!!!!!!!!!!!!!!!!
# With new Ubuntu autoinstaller:
# /etc/cloud/cloud.cfg.d/99-installer.cfg disables growpart and resizefs
# => fixing this here:
if [ -e /etc/cloud/cloud.cfg.d/99-installer.cfg ] ; then
   sed -e "s#growpart: {mode: 'off'}#growpart: {mode: 'auto'}#g" \
       -e "s#resize_rootfs: false#resize_rootfs: true#g" \
       -i /etc/cloud/cloud.cfg.d/99-installer.cfg
fi


# ------ Ubuntu -------------------------------------------------------------
if [ -e /usr/bin/apt ] ; then
   /usr/bin/apt-get update
   env DEBIAN_FRONTEND=noninteractive /usr/bin/apt-get install -y nornet-management nornet-autoupdate

# ------ Fedora -------------------------------------------------------------
elif [ -e /usr/bin/dnf ] ; then
   /usr/bin/dnf install -y nornet-management nornet-autoupdate
fi


# ###### Prepare source repositories ########################################

# NOTE: The repositories are not cloned here!

sudo -u nornetpp mkdir -p /home/nornetpp/src/nornet-control
cd /home/nornetpp/src/nornet-control
sudo -u nornetpp git init
sudo -u nornetpp git remote add origin https://github.com/simula/nornet-control.git

cd /home/nornetpp
sudo -u nornetpp ln -s src/nornet-control/src ctrl
