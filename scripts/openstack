# Bash options:
set -ex


# ###### OpenStack configuration ############################################

# ------ Ubuntu -------------------------------------------------------------
if [ -e /usr/bin/apt ] ; then
   /usr/bin/apt-get update
   /usr/bin/apt install -y cloud-init

# ------ Fedora -------------------------------------------------------------
elif [ -e /usr/bin/dnf ] ; then
   /usr/bin/dnf install -y cloud-init
fi
