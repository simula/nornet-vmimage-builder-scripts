# Bash options:
set -ex


UNAME="`uname`"


# ====== NorNet configuration ===============================================
if [ "${UNAME}" == "Linux" ] ; then

   # Create experiment user:
   adduser experiment --disabled-password --gecos "NorNet Experiment User"
   usermod -a -G adm,sudo experiment

   # ------ Ubuntu ----------------------------------------------------------
   if [ -e /usr/bin/apt-get ] ; then
      /usr/bin/apt-get update

      packages="nornet-node"

      # Try 3 times, for the case of download issues:
      env DEBIAN_FRONTEND=noninteractive /usr/bin/apt-get install -y ${packages} || \
         sleep 30 && env DEBIAN_FRONTEND=noninteractive /usr/bin/apt-get install -y ${packages} || \
            sleep 30 && env DEBIAN_FRONTEND=noninteractive /usr/bin/apt-get install -y ${packages}

   # ------ Fedora ----------------------------------------------------------
   elif [ -e /usr/bin/dnf ] ; then
      /usr/bin/dnf install -y nornet-node
   fi


elif [ "${UNAME}" == "FreeBSD" ] ; then
   true

fi
