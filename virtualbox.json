{
  // ###### Variables #######################################################
  "variables": {
    "version": ""
  },

  // ###### Builders ########################################################
  "builders": [
    {
      "vm_name": "{{user `vm_name`}}",
      "output_directory": "{{user `vm_name`}}",
      "type": "virtualbox-iso",
      "guest_additions_mode": "disable",
      "guest_os_type": "Ubuntu_64",
      "headless": false,
      "format": "ova",
      "export_opts": [
        "--ovf20",
        "--manifest",
        "--vsys", "0",
        "--description", "{{user `vm_description`}}",
        "--version",     "{{user `vm_version`}}",
        "--vendor",      "NorNet",
        "--vendorurl",   "https://www.nntb.no"
      ],
      "hard_drive_interface": "sata",
      "hard_drive_discard": true,
      "hard_drive_nonrotational": true,
      "keep_registered": true,

      "cpus": 4,
      "memory": 4096,
      "disk_size": "{{user `vm_disk_root`}}",
      "sound": "pulse",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--nested-hw-virt", "off" ],
        [ "modifyvm", "{{.Name}}", "--firmware", "EFI" ],
        [ "modifyvm", "{{.Name}}", "--rtcuseutc", "on" ],
        [ "modifyvm", "{{.Name}}", "--vram", "48" ],
        [ "modifyvm", "{{.Name}}", "--vrde", "off" ],
        [ "modifyvm", "{{.Name}}", "--graphicscontroller", "vmsvga", "--accelerate3d", "off" ],
        [ "setextradata", "{{.Name}}", "VBoxInternal2/EfiGraphicsResolution", "1024x768" ],
        // VirtualBox seems to hang when there is no serial port but a serial port console configured:
        [ "modifyvm", "{{.Name}}", "--uart1", "0x03f8", "4", "--uartmode1", "file", "/dev/null" ],
        // NIC uses virtio:
        [ "modifyvm", "{{.Name}}", "--nictype1", "virtio", "--nictype2", "virtio", "--nictype3", "virtio", "--nictype4", "virtio" ],
        // Add additional disks:
        [ "storagectl", "{{.Name}}", "--name", "SATA Controller", "--hostiocache", "on" ],
        [ "createhd", "--format", "VDI", "--filename", "{{.Name}}-Home.vdi", "--variant", "Standard", "--size", "{{user `vm_disk_home`}}" ],
        [ "createhd", "--format", "VDI", "--filename", "{{.Name}}-Swap.vdi", "--variant", "Standard", "--size", "{{user `vm_disk_swap`}}" ],
        [ "storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "1", "--type", "hdd",
          "--medium", "{{.Name}}-Home.vdi", "--nonrotational", "on", "--discard", "on" ],
        [ "storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "2", "--type", "hdd",
          "--medium", "{{.Name}}-Swap.vdi", "--nonrotational", "on", "--discard", "on" ]
      ],

      // ====== ISO settings ================================================
      "iso_url": "/home/dreibh/Downloads/ubuntu-20.04.1-live-server-amd64.iso",
      "iso_checksum": "sha256:443511f6bf12402c12503733059269a2e10dec602916c0a75263e5d990f6bb93",
      "ssh_username": "nornetpp",
      "ssh_password": "!NorNetInst!",
      "ssh_pty": true,
      "ssh_timeout": "60m",
      "ssh_handshake_attempts": "1024",
      "shutdown_command": "echo '!NorNetInst!' | sudo -S shutdown -P now",
      "http_directory": ".",

      // ====== Boot into installer =========================================
      "boot_wait": "3s",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "linux /casper/vmlinuz --- autoinstall ds=\"nocloud-net;seedfrom=http://{{ .HTTPIP }}:{{ .HTTPPort }}/\"<enter><wait>",
        "initrd /casper/initrd<enter><wait>",
        "boot<enter>"
      ]
    }
  ],

  // ###### Provisioners ####################################################
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo '!NorNetInst!' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/virtualbox-guest-utils"
    },
    {
      "type": "shell",
      "execute_command": "echo '!NorNetInst!' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/user-settings"
    }
  ]
}
