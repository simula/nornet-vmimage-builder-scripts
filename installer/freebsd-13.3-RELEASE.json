{
  // ====== ISO settings ====================================================
  "iso_url": "https://download.freebsd.org/ftp/releases/ISO-IMAGES/13.3/FreeBSD-13.3-RELEASE-amd64-disc1.iso",
  "iso_checksum": "sha512:e793c20a14cd91e09d4e81dc545f377219de851b5c6ff69851f279e51dad7d67a4ac3fc8e7eaa5f8ecf7164188c098ab2ad6c23878ac404d4d4653d16d4ed2b0",
  "ssh_username": "{{user `user_name`}}",
  "ssh_password": "{{user `user_password`}}",
  "ssh_pty": true,
  "ssh_timeout": "60m",
  "ssh_handshake_attempts": "1024",
  "shutdown_command": "echo '{{user `user_password`}}' | sudo -S poweroff",

  // ====== Boot into installer =============================================
  "vboxmanage": [ [ "modifyvm", "{{.Name}}", "--graphicscontroller", "vboxsvga" ] ],
  "boot_wait": "120s",
  "boot_command": [
    "s<enter><wait>",
    "cd /tmp && dhclient vtnet0 && ",
    "fetch http://{{ .HTTPIP }}:{{ .HTTPPort }}/installerconfig && ",
    "bsdinstall script /tmp/installerconfig;<enter>"
   ]
}
