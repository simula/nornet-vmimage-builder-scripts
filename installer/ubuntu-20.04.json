{
  // ====== ISO settings ====================================================
  "iso_url": "https://releases.ubuntu.com/20.04/ubuntu-20.04.1-live-server-amd64.iso",
  "iso_checksum": "sha256:443511f6bf12402c12503733059269a2e10dec602916c0a75263e5d990f6bb93",
  "ssh_username": "{{user `user_name`}}",
  "ssh_password": "{{user `user_password`}}",
  "ssh_pty": true,
  "ssh_timeout": "60m",
  "ssh_handshake_attempts": "1024",
  "shutdown_command": "echo '{{user `user_password`}}' | sudo -S shutdown -P now",

  // ====== Boot into installer =============================================
  "boot_wait": "10s",
  "boot_command": [
    "<esc><wait>",
    "<esc><wait>",
    "linux /casper/vmlinuz --- autoinstall ds=\"nocloud-net;seedfrom=http://{{ .HTTPIP }}:{{ .HTTPPort }}/\"<enter><wait>",
    "initrd /casper/initrd<enter><wait>",
    "boot<enter>"
  ]
}
