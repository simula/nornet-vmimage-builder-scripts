{
  // ====== ISO settings ====================================================
  "iso_url": "https://download.freebsd.org/ftp/releases/ISO-IMAGES/13.1/FreeBSD-13.1-RELEASE-amd64-bootonly.iso",
  "iso_checksum": "sha512:20749fd0f2c93fa70913a08370c5c571565527883e246815bad1bff81b07abcdaf95b8774de544c2175e66a018291be9034c71fba9949a9c3b611e6303b4a132",
  "ssh_username": "{{user `user_name`}}",
  "ssh_password": "{{user `user_password`}}",
  "ssh_pty": true,
  "ssh_timeout": "60m",
  "ssh_handshake_attempts": "1024",
  "shutdown_command": "echo '{{user `user_password`}}' | sudo -S poweroff",

  // ====== Boot into installer =============================================
  "boot_wait": "60s",
  "boot_command": [
    "s<enter><wait>",
    "cd /tmp && dhclient vtnet0 && ",
    "fetch http://{{ .HTTPIP }}:{{ .HTTPPort }}/installerconfig && ",
    "bsdinstall script /tmp/installerconfig;<enter>"
   ]
}
