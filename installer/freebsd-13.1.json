{
  // ====== ISO settings ====================================================
  "iso_url": "https://download.freebsd.org/ftp/releases/ISO-IMAGES/13.1/FreeBSD-13.1-RC4-amd64-disc1.iso",
  "iso_checksum": "sha512:3e1cf42f6262965df41dda72c72b00415d183676e5492ec44f0af1ef67327b052ac89c242659e2cdae6463f647809587d544839fbad55de24e3c528911440841",
  "ssh_username": "{{user `user_name`}}",
  "ssh_password": "{{user `user_password`}}",
  "ssh_pty": true,
  "ssh_timeout": "60m",
  "ssh_handshake_attempts": "1024",
  "shutdown_command": "echo '{{user `user_password`}}' | sudo -S poweroff",

  // ====== Boot into installer =============================================
  "boot_wait": "30s",
  "boot_command": [
    "s<enter><wait>",
    "cd /tmp && dhclient vtnet0 && ",
    "fetch http://{{ .HTTPIP }}:{{ .HTTPPort }}/installerconfig && ",
    "bsdinstall script /tmp/installerconfig;<enter>"
   ]
}
