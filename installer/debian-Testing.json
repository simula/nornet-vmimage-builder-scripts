{
  // ====== ISO settings ====================================================
  "iso_url": "https://cdimage.debian.org/cdimage/daily-builds/daily/arch-latest/amd64/iso-cd/debian-testing-amd64-netinst.iso",
  // See: curl https://cdimage.debian.org/cdimage/daily-builds/daily/arch-latest/amd64/iso-cd/SHA256SUMS
  "iso_checksum": "sha256:35d6345668121f32dc72e5fe06d550f76a72302b9a0eea9177053d48870c9890",
  "ssh_username": "{{user `user_name`}}",
  "ssh_password": "{{user `user_password`}}",
  "ssh_pty": true,
  "ssh_timeout": "60m",
  "ssh_handshake_attempts": "1024",
  "shutdown_command": "echo '{{user `user_password`}}' | sudo -S shutdown -P now",

  // ====== Boot into installer =============================================
  "boot_wait": "10s",
  "boot_command": [
    // !!! Select console-based installer !!!
    "<down>",
    // !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
    "e<down><down><down><end>",
    "priority=critical",
    " auto=true",
    " debconf/frontend=noninteractive",
    " console-setup/ask_detect=false",
    " debian-installer=en_US",
    " kbd-chooser/method=us",
    " keyboard-configuration/layout=USA",
    " keyboard-configuration/variant=USA",
    " locale=en_US",
    " netcfg/get_domain={{user `host_domain`}}",
    " netcfg/get_hostname={{user `host_name`}}",
    " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian.preseed",
    "<wait><leftCtrlOn>x<leftCtrlOff>"
   ]
}
