{
  // ====== ISO settings ====================================================
  "iso_url": "https://download.freebsd.org/ftp/releases/ISO-IMAGES/13.2/FreeBSD-13.2-RELEASE-amd64-bootonly.iso",
  "iso_checksum": "sha512:f30ac967e32f008265e140d7cbbc4f29a2955d4984d53c8e6ee004d60d34eae54599ce93812ad5094e40b434b485568b4e3fdd62a8a71c0a09529acf6ad0331a",
  "ssh_username": "{{user `user_name`}}",
  "ssh_password": "{{user `user_password`}}",
  "ssh_pty": true,
  "ssh_timeout": "60m",
  "ssh_handshake_attempts": "1024",
  "shutdown_command": "echo '{{user `user_password`}}' | sudo -S poweroff",

  // ====== Boot into installer =============================================
  "boot_wait": "30s",
  "boot_command": [
    "s<enter><wait>",
    "cd /tmp && dhclient vtnet0 && ",
    "fetch http://{{ .HTTPIP }}:{{ .HTTPPort }}/installerconfig && ",
    "bsdinstall script /tmp/installerconfig;<enter>"
   ]
}
