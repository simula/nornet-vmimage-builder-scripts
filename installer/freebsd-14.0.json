{
  // ====== ISO settings ====================================================
  "iso_url": "https://download.freebsd.org/snapshots/amd64/amd64/ISO-IMAGES/14.0/FreeBSD-14.0-CURRENT-amd64-20220210-8dc42f98047-253065-bootonly.iso",
  "iso_checksum": "sha512:446dc808800c7520bb8649adf6c67fa2afb5c67ed5c5b114f0aeb6e91097c9704f8366c14c1062dc4d01022df78c8149d9ec822bbde59021cfb19ad263186ba1",
  "ssh_username": "{{user `user_name`}}",
  "ssh_password": "{{user `user_password`}}",
  "ssh_pty": true,
  "ssh_timeout": "60m",
  "ssh_handshake_attempts": "1024",
  "shutdown_command": "echo '{{user `user_password`}}' | sudo -S poweroff",

  // ====== Boot into installer =============================================
  "boot_wait": "30s",
  "boot_command": [
    "s<enter><wait>",
    "cd /tmp && dhclient vtnet0 && ",
    "fetch http://{{ .HTTPIP }}:{{ .HTTPPort }}/installerconfig && ",
    "bsdinstall script /tmp/installerconfig;<enter>"
   ]
}
