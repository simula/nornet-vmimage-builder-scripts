{
  // ====== ISO settings ====================================================
  "iso_url": "https://cdimage.debian.org/mirror/cdimage/archive/10.13.0/amd64/iso-cd/debian-10.13.0-amd64-netinst.iso",
  "iso_checksum": "sha256:75aa64071060402a594dcf1e14afd669ca0f8bf757b56d4c9c1a31b8f7c8f931",
  "ssh_username": "{{user `user_name`}}",
  "ssh_password": "{{user `user_password`}}",
  "ssh_pty": true,
  "ssh_timeout": "60m",
  "ssh_handshake_attempts": "1024",
  // No shutdown_command needed!

  // ====== Boot into installer =============================================
  "boot_wait": "10s",
  "boot_command": [
    "e<down><down><down><end>priority=critical",
    " auto=true",
    " debconf/frontend=noninteractive",
    " console-setup/ask_detect=false",
    " debian-installer=en_US",
    " kbd-chooser/method=us",
    " keyboard-configuration/layout=USA",
    " keyboard-configuration/variant=USA",
    " locale=en_US",
    " netcfg/get_domain={{user `host_domain`}}",
    " netcfg/get_hostname={{user `host_name`}}",
    " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian.preseed",
    "<wait><leftCtrlOn>x<leftCtrlOff>"
   ]
}
