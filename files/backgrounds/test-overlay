# Bash options:
set -eu

RESOLUTION="3840x2160"

make generate_overlayImage-${RESOLUTION}.png

result=$(find . -name "Overlay-${RESOLUTION}.png")
if [ -e "${result}" ] ; then
   echo "==> ${result}"
else
   echo "Something went wrong!"
   exit 1
fi
